

<div class="content box">
  <h1 class="title">Contact</h1>
  <div class="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d18986.48680938466!2d-2.088049700000003!3d53.49864230000002!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487bac41e344c3eb%3A0xdc7abd07eba9e86c!2sAshton-under-Lyne!5e0!3m2!1sen!2suk!4v1426610341240" width="830" height="450" frameborder="0" style="border:0"></iframe>
  </div>
  <div id="comment-hide-me">
    <h3>Feel Free to Drop Me a Line</h3>
    <div class="form-container">
      <% if @contact %>
          <%= form_for @contact, class: "forms", id: "commentform", remote: true do |f| %>
              <fieldset>
                <p class="form-row text-input-row">
                  <%= f.label :name %>
                  <span class="required">*</span>
                  <%= f.text_field :name, type:"text", class:"text-input" %>
                </p>
                <p class="form-row text-input-row">
                  <%= f.label :email %>
                  <span class="required">*</span>
                  <%= f.text_field :email, type:"text", class:"text-input" %>
                </p>
                <p class="form-row text-input-row">
                  <%= f.label :subject %>
                  <%= f.text_field :subject, type:"text", class:"text-input" %>
                </p>
                <p class="form-row text-area-row">
                  <%= f.label "Message", for: :body %>
                  <span class="required">*</span>
                  <%= f.text_area :message, size: "45x8", class:"text-area" %>
                </p>
                <p class="button-row">
                  <%= f.submit 'Submit', class: "btn-submit", name: "submit", type: "submit", style: "opacity: 1;" %>
                </p>
              </fieldset>
          <% end %>
      <% end %>
    </div>
  </div>
</div>


