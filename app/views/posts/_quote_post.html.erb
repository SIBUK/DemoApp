<div class="post format-quote box">
  <% if type == :home %>
      <h2 class="title"><%= link_to post.title, post %></h2>
      <blockquote class="blockquote-quote"><%= post.body %><cite><%= post.quoteauthor %></cite></blockquote>

  <% elsif type == :partial %>
      <h2 class="title"><%= post.title %></h2>
      <blockquote class="blockquote-quote"><%= post.body %><cite><%= post.quoteauthor %></cite></blockquote>

  <% elsif type == :full %>

  <% end %>

  <%= render partial: 'home/post_footer', locals: {post: post, icon: "icon-quote"} %>
</div>
