<div class="content">
  <div class="box">
    <h1 class="title"><%= @post.title %></h1>
    <% lines = @post.body.split("|") %>
    <% pics = Pic.where("post_id = ?", @post.id) %>
    <% lines.each_with_index do |line, idx| %>
        <p><%= line %></p>
        <% if idx < pics.size %>
            <div class="outer none"><span class="inset"><%= link_to (image_tag (pics[idx].image.url(:medium)), alt: ""), pics[idx].image.url(:large) %></span></div>
        <% end %>
    <% end %>
  </div>
  <div id="comment-wrapper" class="box">
    <div id="comments">
      <h3 id="comments-title"><%= @response %>"<%= @post.title %>"</h3>
      <ol id="singlecomments" class="commentlist">
        <% @comments.each do |comment| %>
            <%= render partial: 'post_comments/comment', locals: {comment: comment.comment, indent: comment.indent, reply: false} %>
        <% end %>
      </ol>
    </div>
    <%= render partial: 'post_comments/new_comment', locals: {comment: @post_comment, post_id: @post.id, comment_id: nil} %>
  </div>
</div>
<%= render partial: 'posts/sidebar' %>

