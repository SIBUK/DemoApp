<div id="comment-form" class="comment-form">
  <div id="respond">
    <h3 id="reply-title">Leave a Reply</h3>
    <p class="comment-notes">Your email address will not be published. Required fields are marked <span class="required">*</span></p>
    <%= form_for comment, id: "commentform" do |f| %>
        <%= f.hidden_field :post_id, value: post_id %>
        <%= f.hidden_field :post_comment_id, value: comment_id %>
        <p class="comment-form-author">
          <%= f.label :name %>
          <span class="required">*</span>
          <%= f.text_field :name, type:"text" %>
        </p>
        <p class="comment-form-email">
          <%= f.label :email %>
          <%= f.text_field :email, type:"text" %>
        </p>
        <p class="comment-form-url">
          <%= f.label :website, for: :website %>
          <%= f.text_field :website, type:"text" %>
        </p>
        <p class="comment-form-comment">
          <%= f.label "Comment", for: :body %>
          <span class="required">*</span>
          <%= f.text_area :body, size: "45x8" %>
        </p>
        <p class="form-submit">
          <%= f.submit 'Post Comment', name: "submit", type: "submit", id: "submit", style: "opacity: 1;" %>
        </p>
    <% end %>
  </div>
</div>