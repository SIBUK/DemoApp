<li class="comment">
  <div class="comment">
    <div class="comment-author vcard user frame"> <%= image_tag "avatar.jpg", alt: "", class: "avatar avatar-70 photo", width: 70, height: 70 %> </div>
    <div class="message"> <span class="reply-link"><%= link_to 'Reply', post_comment_path(comment), class: "comment-reply-link" %></span>
      <div class="info">
        <h2><%= comment.name %></h2>
        <span class="meta">September 13, 2045 at 12:32 pm</span> </div>
      <div class="comment-body ">
        <p><%= comment.body %></p>
      </div>
      <span class="edit-link"></span> </div>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
</li>
