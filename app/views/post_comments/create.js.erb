<% if @id %>
    var selector = $("#tag<%= @id %>");
    var id = $("#testid");
    if (id.length > 0)
    {
        id.slideUp( 400, function() {
            $(this).remove();
            selector.append("<%= escape_javascript(render partial: 'post_comments/comment', locals: {node: @post_node, indent: true}).html_safe %>").hide().slideDown(400);
        });
    }
<% else %>
    $("#comments").append("<%= escape_javascript(render partial: 'post_comments/comment', locals: {node: @post_node, indent: false}).html_safe %>")
    $("#com<%= @new_id %>").hide().fadeIn(400)
<% end %>
