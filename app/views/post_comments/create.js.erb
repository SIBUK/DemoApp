<% if @post_comment.post_comment_id %>
    var selector = $("#com<%= @post_comment.post_comment_id %>");
    var id = $("#testid");
    if (id.length > 0)
    {
        id.slideUp( 400, function() {
            $(this).remove();
            selector.append("<%= escape_javascript(render partial: 'post_comments/comment', locals: {comment: @post_comment, indent: 1}).html_safe %>").hide().slideDown(400);
        });
    }
<% else %>
    $("#comments").append("<%= escape_javascript(render partial: 'post_comments/comment', locals: {comment: @post_comment, indent: 0}).html_safe %>").hide().slideDown(400);
<% end %>
