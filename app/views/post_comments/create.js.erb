<% if @id %>
    var id = $("#attachment");
    if (id.length > 0)
    {
        id.slideUp( 400, function() {
            $(this).remove();
            $("#new-tag<%= @id %>").append("<%= escape_javascript(render partial: 'post_comments/comment', locals: {node: @post_node, indent: true}).html_safe %>").hide().slideDown(400);
        });
    }
<% else %>
    $("#comments").append("<%= escape_javascript(render partial: 'post_comments/comment', locals: {node: @post_node, indent: false}).html_safe %>");
    $("#fade-tag<%= @new_id %>").hide().fadeIn(400);
    $("#post_comment_name").val("");
    $("#post_comment_email").val("");
    $("#post_comment_website").val("");
    $("#post_comment_body").val("");
<% end %>
